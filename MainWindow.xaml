                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Margin="10 5 10 0" Foreground="White" Width="50">Gender</Label>
                        <ComboBox 
                            Name="GenderComboBox" 
                            Background="White" 
                            FontWeight="SemiBold" 
                            Width="300" 
                            IsSynchronizedWithCurrentItem="True"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Margin="10 5 10 0" Foreground="White" Width="50">Status</Label>
                        <ComboBox 
                            Name="StatusComboBox" 
                            Background="White" 
                            FontWeight="SemiBold" 
                            Width="300" 
                            IsSynchronizedWithCurrentItem="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="40">
                        <Button 
                        Width ="100" 
                        Name ="Update"
                        Margin="20"
                        Content="Update" 
                        Background="White" 
                        Foreground="Blue" 
                        Click="btnUpdateClick"/>
                        <Button 
                        x:Name ="Delete"
                        Width ="100" 
                        Margin="20"
                        Content="Delete" 
                        Background="Red" 
                        Foreground="White"
                        Click="btnDeleteClick"/>
                    </StackPanel>
                    <TextBlock 
                        Name="ApiResponse" 
                        Text="" 
                        Foreground="White" 
                        FontWeight="Medium"
                        FontSize="14" 
                        Height="80"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        IsEnabled="False"/>
                </WrapPanel>
            </Border>

            <DataGrid 
                x:Name="UserDataGrid" 
                Margin="13,93,472,474" 
                AutoGenerateColumns="False" 
                FontWeight="Regular" 
                SelectionChanged="UserDataGrid_SelectionChanged">

                 --><!--FontColor and Style of Column--><!--
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#4880FF"/>
                        <Setter Property ="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>

                    </Style>
                </DataGrid.Resources>
                 --><!--ColumnHeader Text and Bindings--><!--
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Id" Binding="{Binding id}" Width="75" Foreground="#4880FF" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="200" Foreground="#4880FF" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="200" Foreground="#4880FF" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding gender}" Width="75" Foreground="#4880FF" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="*" Foreground="#4880FF" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid >

            <StackPanel Orientation="Horizontal" Margin="26,0,548,407" Height="40" VerticalAlignment="Bottom">
                <Button 
                    Height="40"  
                    VerticalAlignment="Bottom" 
                    Name="btnPrev" 
                    Width="60" 
                    Click="btnPrev_Click" 
                    Opacity="0.75" 
                    Content="&lt;"/>
                <TextBox 
                    Name="PageField"
                    Height="40" 
                    VerticalAlignment="Bottom"
                    Width="100"
                    TextAlignment="Center"
                    Text="{Binding CurentPage, BindsDirectlyToSource=True, FallbackValue=1, TargetNullValue=1}"
                    TextChanged="TextBox_TextChanged"
                    IsEnabled="True" AcceptsTab="True" MaxLength="3" SelectionOpacity="-1"/>
                <Button 
                    Height="40"
                    HorizontalAlignment="Right" 
                    Name="btnNext" 
                    VerticalAlignment="Bottom" 
                    Width="60" 
                    Content="&gt;"
                    Click="btnNext_Click" 
                    Opacity="0.75"/>
                <Button Height="40" 
                    Name="Export" 
                    VerticalAlignment="Bottom" 
                    Width="80" 
                    Margin="165 0 0 0"
                    FontWeight="SemiBold"
                    Content="Export"
                    Click="Export_Click" 
                    Opacity="0.75"/>
            </StackPanel>
            <TextBlock 
                Name="FileSavePath" Text="" 
